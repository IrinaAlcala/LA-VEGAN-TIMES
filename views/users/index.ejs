  <link rel="stylesheet" href="/stylesheets/style.css" />
  <title>LA VEGAN TIMES</title>
</head>
<body>
        <% if (user) { %> 
            <%- include('../partials/nav') %>
            <a href="/users/<%=user._id%>/favoriteRestaurants">My Favorite Restaurants</a>
            <a href="/logout">Log Out</a>
        <% } else { %>
            <a href="/auth/google">Login with Google</a>
        <% } %>
    </nav>
  <div>
      <!-- only allows post if user is in db-->
